package application;

import java.util.Locale;
import java.util.Scanner;
import entities.Rectangle;

public class ExerciciosDois {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		Rectangle rg = new Rectangle();

		System.out.println("Enter rectangle width and height: ");
		rg.height = sc.nextDouble();
		rg.width = sc.nextDouble();
		
		System.out.println("Area: " + rg.area());
		System.out.println("Perimeter: " + rg.perimeter());
		System.out.println("Diagonal: " + rg.diagonal());
	}

}
